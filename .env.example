# PLAYALTER Platform Environment Configuration

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
PLAYALTER__APP_NAME="PLAYALTER Platform"
PLAYALTER__ENVIRONMENT=development
PLAYALTER__DEBUG=true
PLAYALTER__LOG_LEVEL=INFO

# =============================================================================
# MODAL.COM CONFIGURATION
# =============================================================================
PLAYALTER__MODAL_APP_NAME=playalter-platform
PLAYALTER__GPU_TYPE=T4
PLAYALTER__MEMORY_MB=16384
PLAYALTER__TIMEOUT_SECONDS=3600
PLAYALTER__KEEP_WARM=1
PLAYALTER__MAX_CONCURRENT_INPUTS=10

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
PLAYALTER__SECURITY__JWT_SECRET_KEY=your_super_secret_jwt_key_here
PLAYALTER__SECURITY__JWT_ALGORITHM=HS256
PLAYALTER__SECURITY__ACCESS_TOKEN_EXPIRE_MINUTES=30
PLAYALTER__SECURITY__REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
PLAYALTER__SECURITY__RATE_LIMIT_REQUESTS=100
PLAYALTER__SECURITY__RATE_LIMIT_WINDOW=3600

# File Upload Limits
PLAYALTER__SECURITY__MAX_FILE_SIZE_MB=10
PLAYALTER__SECURITY__MAX_BATCH_SIZE=10

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
PLAYALTER__MODEL__FLAME_MODEL_PATH=/tmp/flame_model
PLAYALTER__MODEL__INSWAPPER_MODEL_PATH=/tmp/inswapper_models
PLAYALTER__MODEL__FACE_DETECTOR_MODEL=buffalo_l
PLAYALTER__MODEL__N_SHAPE_PARAMS=300
PLAYALTER__MODEL__N_EXPRESSION_PARAMS=100
PLAYALTER__MODEL__N_POSE_PARAMS=15

# Image Processing
PLAYALTER__MODEL__MAX_IMAGE_SIZE=4096,4096
PLAYALTER__MODEL__MIN_IMAGE_SIZE=64,64
PLAYALTER__MODEL__DEFAULT_JPEG_QUALITY=95

# =============================================================================
# DIRECTORIES
# =============================================================================
PLAYALTER__UPLOAD_DIR=/tmp/uploads
PLAYALTER__LOG_DIR=/tmp/logs
PLAYALTER__MODEL_CACHE_DIR=/tmp/model_cache

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
PLAYALTER__ENABLE_FILE_LOGGING=true
PLAYALTER__ENABLE_JSON_LOGGING=true
PLAYALTER__MAX_LOG_FILE_SIZE_MB=50
PLAYALTER__LOG_BACKUP_COUNT=5

# =============================================================================
# CORS SETTINGS
# =============================================================================
PLAYALTER__CORS_ORIGINS=*
PLAYALTER__CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
PLAYALTER__CORS_HEADERS=*

# =============================================================================
# FEATURE FLAGS
# =============================================================================
PLAYALTER__ENABLE_FACE_ANALYSIS=true
PLAYALTER__ENABLE_PRIVACY_MASKS=true
PLAYALTER__ENABLE_FACE_SWAP=true
PLAYALTER__ENABLE_BATCH_PROCESSING=true
PLAYALTER__ENABLE_3D_MESH_EXPORT=false
PLAYALTER__ENABLE_VIDEO_PROCESSING=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
PLAYALTER__MAX_PROCESSING_TIME_SECONDS=300
PLAYALTER__MAX_QUEUE_SIZE=100
PLAYALTER__CLEANUP_TEMP_FILES=true
PLAYALTER__TEMP_FILE_MAX_AGE_HOURS=24

# =============================================================================
# MONITORING
# =============================================================================
PLAYALTER__ENABLE_METRICS=true
PLAYALTER__METRICS_ENDPOINT=/metrics
PLAYALTER__HEALTH_CHECK_ENDPOINT=/health

